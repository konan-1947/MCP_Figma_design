{
  "name": "figma-design-assistant",
  "version": "1.0.0",
  "description": "Figma Design Assistant - Powered by Gemini AI",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run build:web",
    "build:web": "cd web && npm run build && cd ..",
    "build:app": "electron-builder",
    "build:plugin": "cd plugin && npm run build",
    "dev": "tsx --watch src/start-gemini-http.ts",
    "dev:unified": "tsx --watch src/start-gemini-http.ts",
    "dev:electron": "tsc && concurrently \"npm run dev:unified\" \"npm run dev:web\" \"wait-on http://localhost:8765 http://localhost:5173 && electron .\"",
    "dev:web": "cd web && npm run dev",
    "dev:all-app": "npm run dev:electron",
    "package": "npm run build && electron-builder",
    "start": "node dist/start-gemini-http.js",
    "clean": "rimraf dist dist-web dist-electron",
    "test:server": "npm run dev:unified"
  },
  "dependencies": {
    "@google/generative-ai": "^0.12.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "electron-is-dev": "^3.0.1",
    "express": "^4.18.2",
    "uuid": "^9.0.1",
    "wait-on": "^9.0.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "tsx": "^4.0.0",
    "typescript": "^5.2.0"
  },
  "keywords": [
    "mcp",
    "figma",
    "claude",
    "ui-design",
    "http-api",
    "rest"
  ],
  "author": "MCP Figma Controller",
  "license": "MIT",
  "build": {
    "appId": "com.figma-design-assistant.app",
    "productName": "Figma Design Assistant",
    "files": [
      "dist-electron/**/*",
      "dist-web/**/*",
      "public/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
