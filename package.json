{
  "name": "figma-mcp-controller",
  "version": "1.0.0",
  "description": "MCP Server để điều khiển Figma Desktop thông qua Claude",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx --watch src/index.ts",
    "dev:mcp": "tsx --watch src/index.ts",
    "dev:http": "tsx --watch src/start-http.ts",
    "dev:all": "concurrently \"npm run dev:http\" \"npm run dev:mcp\"",
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "clean": "rimraf dist",
    "build:plugin": "cd plugin && npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "typescript": "^5.2.0",
    "tsx": "^4.0.0",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "keywords": [
    "mcp",
    "figma",
    "claude",
    "ui-design",
    "http-api",
    "rest"
  ],
  "author": "MCP Figma Controller",
  "license": "MIT"
}